<div class="error-page">
    <div class="container">
        <div class="error-content">
            <h1 class="error-title">Oops! Something went wrong</h1>
            <p class="error-message">
                <%= error || 'An unexpected error occurred. Please try again later.' %>
            </p>
            <div class="error-actions">
                <a href="/" class="btn btn-primary">Go Home</a>
                <button onclick="history.back()" class="btn btn-secondary">Go Back</button>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
}

.error-content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
}

.error-title {
    font-size: 2.5rem;
    color: #1f2937;
    margin-bottom: 1rem;
}

.error-message {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}
</style>