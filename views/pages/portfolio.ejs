<!-- Portfolio Header -->
<section class="page-header">
    <div class="container">
        <h1 class="page-title"><%= __('portfolio.title') %></h1>
        <p class="page-subtitle"><%= __('portfolio.subtitle') %></p>
    </div>
</section>

<!-- Portfolio Gallery -->
<section class="portfolio-gallery">
    <div class="container">
        <% if (portfolio.length === 0) { %>
        <div class="empty-portfolio">
            <div class="empty-icon">
                <i class="fas fa-images"></i>
            </div>
            <h3>No Portfolio Items Yet</h3>
            <p>Check back soon to see examples of our amazing cleaning transformations!</p>
        </div>
        <% } else { %>
        <div class="portfolio-grid">
            <% portfolio.forEach(item => { %>
            <div class="portfolio-item">
                <div class="portfolio-header">
                    <h3 class="portfolio-title"><%= item.title[locale] %></h3>
                    <p class="portfolio-description"><%= item.description[locale] %></p>
                </div>
                <div class="portfolio-images">
                    <div class="before-after">
                        <div class="image-container">
                            <div class="image-label"><%= __('portfolio.before') %></div>
                            <img src="<%= item.before %>" alt="Before cleaning" class="portfolio-image">
                        </div>
                        <div class="image-container">
                            <div class="image-label"><%= __('portfolio.after') %></div>
                            <img src="<%= item.after %>" alt="After cleaning" class="portfolio-image">
                        </div>
                    </div>
                </div>
                <div class="portfolio-date">
                    <i class="fas fa-calendar"></i>
                    <span><%= new Date(item.created).toLocaleDateString(locale) %></span>
                </div>
            </div>
            <% }) %>
        </div>
        <% } %>
    </div>
</section>

