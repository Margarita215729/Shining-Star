<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>
                <i class="fas fa-tachometer-alt"></i>
                Admin Dashboard
            </h1>
            <div class="admin-nav">
                <a href="/" class="btn btn-outline">View Website</a>
                <a href="/admin/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
        
        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-concierge-bell"></i>
                </div>
                <div class="stat-info">
                    <h3><%= services.length %></h3>
                    <p>Services</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-info">
                    <h3><%= packages.length %></h3>
                    <p>Packages</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-images"></i>
                </div>
                <div class="stat-info">
                    <h3><%= portfolio.length %></h3>
                    <p>Portfolio Items</p>
                </div>
            </div>
        </div>
        
        <!-- Admin Forms -->
        <div class="admin-grid">
            <!-- Add Service -->
            <div class="admin-section">
                <h3>
                    <i class="fas fa-plus"></i>
                    Add New Service
                </h3>
                <form method="POST" action="/admin/services">
                    <div class="form-group">
                        <label for="serviceName">Service Name</label>
                        <input type="text" id="serviceName" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="serviceDescription">Description</label>
                        <textarea id="serviceDescription" name="description" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="servicePrice">Price ($)</label>
                        <input type="number" id="servicePrice" name="price" step="0.01" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="serviceDuration">Duration</label>
                        <input type="text" id="serviceDuration" name="duration" placeholder="e.g., 1 hour" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="serviceCategory">Category</label>
                        <select id="serviceCategory" name="category" required>
                            <option value="">Select Category</option>
                            <option value="kitchen">Kitchen</option>
                            <option value="bathroom">Bathroom</option>
                            <option value="living">Living Areas</option>
                            <option value="bedroom">Bedrooms</option>
                            <option value="office">Office</option>
                            <option value="deep">Deep Cleaning</option>
                            <option value="maintenance">Maintenance</option>
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i>
                        Add Service
                    </button>
                </form>
            </div>
            
            <!-- Add Package -->
            <div class="admin-section">
                <h3>
                    <i class="fas fa-box"></i>
                    Add New Package
                </h3>
                <form method="POST" action="/admin/packages">
                    <div class="form-group">
                        <label for="packageName">Package Name</label>
                        <input type="text" id="packageName" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="packageDescription">Description</label>
                        <textarea id="packageDescription" name="description" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="originalPrice">Original Price ($)</label>
                        <input type="number" id="originalPrice" name="originalPrice" step="0.01" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="discountPrice">Discount Price ($)</label>
                        <input type="number" id="discountPrice" name="discountPrice" step="0.01" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="discount">Discount Text</label>
                        <input type="text" id="discount" name="discount" placeholder="e.g., Save $50" required>
                    </div>
                    
                    <div class="form-group">
                        <label>Select Services</label>
                        <div class="services-checklist">
                            <% services.forEach(service => { %>
                            <label class="service-option">
                                <input type="checkbox" name="services" value="<%= service.id %>">
                                <%= service.name %> - $<%= service.price %>
                            </label>
                            <% }); %>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-box"></i>
                        Add Package
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Add Portfolio Item -->
        <div class="admin-section">
            <h3>
                <i class="fas fa-images"></i>
                Add Portfolio Item
            </h3>
            <form method="POST" action="/admin/portfolio" enctype="multipart/form-data">
                <div class="admin-grid">
                    <div>
                        <div class="form-group">
                            <label for="portfolioTitle">Title</label>
                            <input type="text" id="portfolioTitle" name="title" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="portfolioDescription">Description</label>
                            <textarea id="portfolioDescription" name="description" required></textarea>
                        </div>
                    </div>
                    
                    <div>
                        <div class="form-group">
                            <label for="beforeImage">Before Image</label>
                            <div class="file-input">
                                <input type="file" id="beforeImage" name="beforeImage" accept="image/*" required>
                                <small>Upload a "before" image showing the space before cleaning</small>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="afterImage">After Image</label>
                            <div class="file-input">
                                <input type="file" id="afterImage" name="afterImage" accept="image/*" required>
                                <small>Upload an "after" image showing the cleaned space</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-images"></i>
                    Add Portfolio Item
                </button>
            </form>
        </div>
        
        <!-- Data Tables -->
        <div class="admin-grid">
            <!-- Services List -->
            <div class="admin-section">
                <h3>Current Services</h3>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% services.forEach(service => { %>
                        <tr>
                            <td><%= service.name %></td>
                            <td><%= service.category %></td>
                            <td>$<%= service.price %></td>
                            <td><%= service.duration %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Packages List -->
            <div class="admin-section">
                <h3>Current Packages</h3>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Original Price</th>
                            <th>Discount Price</th>
                            <th>Services</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% packages.forEach(package => { %>
                        <tr>
                            <td><%= package.name %></td>
                            <td>$<%= package.originalPrice %></td>
                            <td>$<%= package.discountPrice %></td>
                            <td><%= package.services.length %> services</td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Portfolio List -->
        <div class="admin-section">
            <h3>Portfolio Items</h3>
            <div class="portfolio-admin-grid">
                <% portfolio.forEach(item => { %>
                <div class="portfolio-admin-item">
                    <div class="portfolio-images">
                        <div class="admin-before-after">
                            <img src="<%= item.beforeImage %>" alt="Before" onerror="this.src='/images/placeholder.jpg'">
                            <img src="<%= item.afterImage %>" alt="After" onerror="this.src='/images/placeholder.jpg'">
                        </div>
                    </div>
                    <div class="portfolio-admin-info">
                        <h4><%= item.title %></h4>
                        <p><%= item.description %></p>
                        <small>Added: <%= new Date(item.createdAt).toLocaleDateString() %></small>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
</body>
</html>